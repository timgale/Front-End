/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>
<?php if($_product->getAttributeText('size') == 'Custom'): ?>
	<img src="<?php echo $this->getSkinUrl('images/custom-made.png') ?>" class="sticker" alt="Custom Size" />
<?php endif; ?>
<?php if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>
<p class="product-image">
    <?php
    //    $_img = '<img id="image" src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(365,487).'" alt="'.$this->htmlEscape($this->getImageLabel()).'" title="'.$this->htmlEscape($this->getImageLabel()).'" />';
    //    echo $_helper->productAttribute($_product, $_img, 'image');
    ?>
    <?php foreach ($this->getGalleryImages() as $_image): ?>
        <img id="image" class="count-1" src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile())->resize(365,487); ?>" width="365" height="487" alt="<?php echo $this->htmlEscape($_image->getLabel()) ?>" />
        <span class="zoom-button"><?php echo $this->__('Zoom') ?></span>
        <?php break; ?>
    <?php endforeach; ?>
</p>
<?php else: ?>
<p class="product-image">
    <?php
        $_img = '<img src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(365,487).'" alt="'.$this->htmlEscape($this->getImageLabel()).'" title="'.$this->htmlEscape($this->getImageLabel()).'" />';
        echo $_helper->productAttribute($_product, $_img, 'image');
    ?>
</p>
<?php endif; ?>
<?php if (count($this->getGalleryImages()) > 0): ?>
<div class="more-views">
    <ul>
    <?php $i = 0; ?>
    <?php foreach ($this->getGalleryImages() as $_image): ?>
		<?php $i++; ?>
        <li>
			<a class="count-<?php echo $i; ?>" href="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile())->resize(365,487); ?>" title="<?php echo $this->htmlEscape($_image->getLabel()) ?>"><img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile())->resize(69,69); ?>" width="69" height="69" alt="<?php echo $this->htmlEscape($_image->getLabel()) ?>" /></a>
            <a style="display: none" class="grouped_elements count-<?php echo $i; ?>" rel="group1" class="zoom-image" href="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile()); ?>" title="<?php echo $this->htmlEscape($_image->getLabel()) ?>"></a>
        </li>
	<?php endforeach; ?>
	
	</ul>
</div>
<?php endif; ?>
