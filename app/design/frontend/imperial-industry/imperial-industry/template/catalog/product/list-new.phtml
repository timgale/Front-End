<?php
/**
 * Product list template
 *
 * @see Mage_Catalog_Block_Product_List
 */
?>
<?php
    $_productCollection=$this->getLoadedProductCollection();
    $_helper = $this->helper('catalog/output');
?>
<div class="new promotion-products">
    <div class="title">
        <h2><?php echo Mage::getModel('catalog/category')->load($this->getCategoryId())->getName() ?></h2>
    </div>
    <span class="arrow left"></span>
    <span class="arrow right"></span>
    <?php $_iterator = 0; ?>
    <ul class="products-grid" id="new-products-grid">
    <?php foreach ($_productCollection as $_product): ?>
        <li class="item<?php if( ++$_iterator == sizeof($_productCollection) ): ?> last<?php endif; ?>">
            <span class="sticker"><?php echo $this->__('New') ?></span>
            <div class="product-image">
                <a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>"><img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(170,170); ?>" width="170" height="170"alt="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" /></a>
                <div class="add-to-links">
                    <?php if ($this->helper('wishlist')->isAllow()) : ?>
                        <a href="<?php echo $this->helper('wishlist')->getAddUrl($_product) ?>" class="link-wishlist"><span></span></a>
                    <?php endif; ?>
                </div>
            </div>
            <?php $_productNameStripped = $this->stripTags($_product->getName(), null, true); ?>
            <h3 class="product-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $_productNameStripped; ?>"><?php echo $_helper->productAttribute($_product, $_product->getName() , 'name'); ?></a></h3>
            <?php if($_product->getRatingSummary()): ?>
            <?php echo $this->getReviewsSummaryHtml($_product) ?>
            <?php ?>
            <?php endif; ?>
            <div class="bottom clearfix">
				<div class="left">
					<div class="actions">
						<?php if($_product->isSaleable()): ?>
							<button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="button btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_product) ?>')"><span><span><?php echo $this->__('Add to Cart') ?></span></span></button>
						<?php endif; ?>
					</div>
				</div>
				<div class="right">
					<?php echo $this->getPriceHtml($_product, true) ?>
				</div>	
			</div>       
        </li>
    <?php endforeach; ?>
    </ul>
    <script type="text/javascript">decorateList('new-products-grid', 'none-recursive')</script>
</div>
